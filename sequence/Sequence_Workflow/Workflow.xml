<?xml version="1.0" encoding="UTF-8"?>
<Sequences>

    <UnitOperation>
        <PreCleaning>
          <Parameters>
            <Materials>Glassware, Reactants</Materials>
            <Procedure>Thoroughly clean all glassware and prepare reactants.</Procedure>
            <SafetyConsiderations>Wear appropriate safety gear.</SafetyConsiderations>
            <Duration>30 minutes</Duration>
            <Environment>Laboratory</Environment>
          </Parameters>
        </PreCleaning>
      </UnitOperation>

  <Loop>
    <for-loop>
      <iterations>5</iterations>
      <body>
        <UnitOperation>
            <material>Ethanol (50 mL)</material>
            <Reduction>
                <Parameters>
                  <ReactionConditions>
                    <Temperature>25°C</Temperature>
                    <Pressure>1 atm</Pressure>
                    <pH>7</pH>
                  </ReactionConditions>
                  <Reductant>Hydrogen</Reductant>
                  <Catalyst>Palladium</Catalyst>
                  <ReactionTime>2 hours</ReactionTime>
                  <MolarRatio>1:1</MolarRatio>
                  <Solvent>Ethanol</Solvent>
                  <Agitation>Yes</Agitation>
                  <ReactionVessel>Glass reactor (500 mL)</ReactionVessel>
                  <InertAtmosphere>No</InertAtmosphere>
                  <SafetyMeasures>Wear gloves and safety goggles.</SafetyMeasures>
                  <MonitoringAndControl>GC analysis</MonitoringAndControl>
                  <PostReactionTreatment>Rotary evaporation</PostReactionTreatment>
                </Parameters>
              </Reduction>
        </UnitOperation>
      </body>
    </for-loop>
  </Loop>

  <Fork>
    <fork_again>
        <UnitOperation>
            <Preparing>
              <Parameters>
                <material>Reactants (100 g)</material>
                <Materials>Glassware, Reactants</Materials>
                <Procedure>Set up equipment and prepare reactants.</Procedure>
                <SafetyConsiderations>Wear appropriate safety gear.</SafetyConsiderations>
                <Duration>1 hour</Duration>
                <Environment>Laboratory</Environment>
              </Parameters>
            </Preparing>
          </UnitOperation>
    </fork_again>
    <UnitOperation>
        <SetUp>
          <Parameters>
            <device>Round-bottom flask</device>
            <ExperimentName>Reaction A</ExperimentName>
            <SetupInstructions>Assemble the glassware and connect the apparatus.</SetupInstructions>
            <Duration unit="minutes">30</Duration>
            <Equipment>Round-bottom flask, condenser, heating mantle</Equipment>
          </Parameters>
        </SetUp>
      </UnitOperation>
    <Loop>
      <while-loop>
        <break-condition>
          <Condition>Pressure reaches 5 atm</Condition>
        </break-condition>
        <body>
            <UnitOperation>
                <material>Product (250 mg)</material>
                <device>Stirrer</device>
                <Neutralization>
                  <Parameters>
                    <Acid>HCl</Acid>
                    <Base>NaOH</Base>
                    <ReactionTemperature>40°C</ReactionTemperature>
                    <ReactionTime>1 hour</ReactionTime>
                    <StoichiometricRatio>1:1</StoichiometricRatio>
                    <ReactionVessel>Glass beaker</ReactionVessel>
                    <Stirring>Yes</Stirring>
                    <SafetyMeasures>Use fume hood.</SafetyMeasures>
                    <NeutralizationDegree>Complete</NeutralizationDegree>
                    <pHControl>Yes</pHControl>
                    <PostNeutralizationTreatment>Filtration</PostNeutralizationTreatment>
                  </Parameters>
                </Neutralization>
              </UnitOperation>
        </body>
      </while-loop>
    </Loop>
  </Fork>

</Sequences>
